<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="documents_uniquely_applicable_preview_form" model="ir.ui.view">
        <field name="name">docments.applicable.preview.form</field>
        <field name="model">documents.uniquely.applicable</field>
        <field name="arch" type="xml">
            <form>
                <field name="data_file" widget="pdf_viewer"/>
            </form>
        </field>
    </record>

    <record id="documents_applicable_applicant_preview_form" model="ir.ui.view">
        <field name="name">documents.applicable.applicant.preview.form</field>
        <field name="model">documents.applicable.applicant</field>
        <field name="arch" type="xml">
            <form>
                <field name="data_file" widget="pdf_viewer" filename="data_file_name"/>
                <field name="data_file_name" invisible="1"/>
            </form>
        </field>
    </record>



</odoo>